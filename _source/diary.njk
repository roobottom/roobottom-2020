---
layout: default.njk
title: Diary
---
<div class="layout-like-article">

{% for entry in collections.diary %}
  <article class="diary">
    <footer class="diary-footer">
      <a href="{{ entry.url }}" rel="bookmark" class="diary-link">
        <time datetime="{{ entry.date | date('') }}" class="diary-date">{{ entry.date | date }}</time>
      </a>
    </footer>
    <div class="diary-content">
      {{ entry.templateContent | safe }}
    </div>
    {% if entry.data.photo %}
    <ul class="diary-photos">
      {% for photo in entry.data.photo %}
      <li class="diary-photo">{% img photo.url, { 'alt': photo.alt }, 'square' %}
      {% endfor %}
    </ul>
    {% endif %}
  </article>
{% endfor %}

</div>