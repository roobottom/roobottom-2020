---js
{
  pagination: {
    data: 'collections.articles',
    size: 12,
    alias: 'articles'
  },
  layout: 'default.njk',
  title: 'Articles',
  renderData: {
    titleElement: 'List of articles page {{ pagination.pageNumber + 1 }} of {{ pagination.pages | length }}'
  },
  permalink: '/articles/{{ pagination.pageNumber | paginationURL }}'
}
---
{% from "./_components/teaser.njk" import teaser %}
{% set currentYear = null %}
{% set articleId = 0 %}
<div class="grid">
{%- for article in articles -%}
  {{ teaser(article, global) }}
{%- endfor -%}
</div>
<nav aria-labelledby="pagination-title" class="pagination">
  <h2 id="pagination-title" class="pagination-title">Articles pagination</h2>
  <ol class="pagination-items">
{%- for pageEntry in pagination.pages %}
    <li class="pagination-item"><a href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %} class="pagination-link">Page {{ loop.index }}</a></li>
{%- endfor %}
  </ol>
</nav>