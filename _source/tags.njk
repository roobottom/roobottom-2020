---js
{
  pagination: {
    data: 'collections.tagList',
    size: 1,
    alias: 'tag',
    filter: ['all', 'articles']
  },
  layout: 'default.njk',
  renderData: {
    title: 'Articles tagged “{{ tag }}”'
  },
  permalink: "/tags/{{ tag | slug }}/",
  omitTitle: true
}
---
<h1 class="heading-l"><span class="heading-pre">Articles tagged</span><br>“{{ tag | title }}”</h1>
<div class="layout-like-article">
{% set taglist = collections[ tag ] %}
<dl class="summary-list">
  {%- for article in taglist | reverse -%}
    <div class="summary-list-row">
      <dt class="summary-list-title"><a href="{{ article.url }}">{{ article.data.title }}</a></dt>
      <dd class="summary-list-meta"><time datetime="{{ article.date | date('') }}">{{ article.date | date }}</time><dd>
    </div>
  {%- endfor -%}
</dl>
</div>