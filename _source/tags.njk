---js
{
  pagination: {
    data: 'collections.tagList',
    size: 1,
    alias: 'tag',
    filter: ['all', 'articles']
},
  layout: 'default.njk',
  renderData: {
    title: 'Articles tagged “{{ tag }}”'
  },
  permalink: "/tags/{{ tag | slug }}/"
}
---
{% set taglist = collections[ tag ] %}
<dl class="summary-list">
  {%- for article in taglist | reverse -%}
    <div class="summary-list-row">
      <dt><a href="{{ article.url }}">{{ article.data.title }}</a></dt>
      <dd><time class="teaser-date" datetime="{{ article.date | date('') }}">{{ article.date | date }}</time><dd>
    </div>
  {%- endfor -%}
</dl>